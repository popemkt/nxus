    },
    "configSchema": {
        "fields": [
            {
                "key": "ANTHROPIC_API_KEY",
                "label": "Z.AI Auth Token",
                "type": "password",
                "required": true,
                "placeholder": "Enter your Z.AI API key/token"
            },
            {
                "key": "ANTHROPIC_BASE_URL",
                "label": "API Base URL",
                "type": "url",
                "required": false,
                "defaultValue": "https://open.bigmodel.cn/api/paas/v4/",
                "placeholder": "API endpoint URL"
            }
        ]
    },
    "status": "not-installed"
