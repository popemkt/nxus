{
    "id": "claude-code-glm",
    "name": "Claude Code (GLM)",
    "description": "Claude Code configured to use Z.AI's GLM model",
    "type": "tool",
    "path": "https://z.ai",
    "homepage": "https://z.ai",
    "platform": [
        "linux",
        "macos",
        "windows"
    ],
    "checkCommand": "claude --version",
    "installInstructions": "Set environment variables before running claude:\nexport ANTHROPIC_BASE_URL=\"https://open.bigmodel.cn/api/paas/v4/\"\nexport ANTHROPIC_API_KEY=\"your_z_ai_key\"",
    "dependencies": [
        "claude-code"
    ],
    "configSchema": {
        "fields": [
            {
                "key": "ANTHROPIC_API_KEY",
                "label": "Z.AI API Key",
                "type": "password",
                "required": true,
                "placeholder": "Enter your Z.AI API key"
            },
            {
                "key": "ANTHROPIC_BASE_URL",
                "label": "API Base URL",
                "type": "url",
                "required": false,
                "defaultValue": "https://open.bigmodel.cn/api/paas/v4/",
                "placeholder": "API endpoint URL"
            }
        ]
    },
    "commands": [
        {
            "id": "configure",
            "name": "Configure API Keys",
            "description": "Set up Z.AI API credentials",
            "icon": "Gear",
            "category": "Setup",
            "target": "app",
            "mode": "configure",
            "command": ""
        },
        {
            "id": "configure-glm-permanent-bash",
            "name": "Apply to Bash Profile",
            "description": "Add config to ~/.bashrc",
            "icon": "Terminal",
            "category": "Setup",
            "target": "app",
            "mode": "terminal",
            "command": "echo 'export ANTHROPIC_BASE_URL=\"https://open.bigmodel.cn/api/paas/v4/\"' >> ~/.bashrc && echo 'export ANTHROPIC_API_KEY=\"YOUR_Z_AI_KEY\"' >> ~/.bashrc && source ~/.bashrc && echo 'GLM environment configured in ~/.bashrc'"
        },
        {
            "id": "configure-glm-permanent-zsh",
            "name": "Apply to Zsh Profile",
            "description": "Add config to ~/.zshrc",
            "icon": "Terminal",
            "category": "Setup",
            "target": "app",
            "mode": "terminal",
            "command": "echo 'export ANTHROPIC_BASE_URL=\"https://open.bigmodel.cn/api/paas/v4/\"' >> ~/.zshrc && echo 'export ANTHROPIC_API_KEY=\"YOUR_Z_AI_KEY\"' >> ~/.zshrc && source ~/.zshrc && echo 'GLM environment configured in ~/.zshrc'"
        },
        {
            "id": "configure-glm-session",
            "name": "Copy Session Vars",
            "description": "Copy env vars to clipboard",
            "icon": "Copy",
            "category": "Setup",
            "target": "app",
            "mode": "copy",
            "command": "export ANTHROPIC_BASE_URL=\"https://open.bigmodel.cn/api/paas/v4/\"\nexport ANTHROPIC_API_KEY=\"YOUR_Z_AI_KEY\""
        },
        {
            "id": "docs-glm",
            "name": "Z.AI Documentation",
            "description": "Open Z.AI GLM docs",
            "icon": "BookOpen",
            "category": "Help",
            "target": "app",
            "mode": "docs",
            "command": "https://open.bigmodel.cn/dev/api"
        }
    ],
    "docs": [
        {
            "id": "setup",
            "title": "Setup Guide",
            "file": "setup.md",
